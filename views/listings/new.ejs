<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
   <form method="POST" action="/listings" novalidate class="needs-validation">
    <div>
    <label for="title" class="form-label">Title</label>
    <input type="text" name="listing[title]" placeholder="enter title" class="form-control" required>
    </div>
    <br>
    <div>
    <label for="description" class="form-label">Description</label>
    <textarea  name="listing[description]" class="form-control" ></textarea>
    </div> 
    <br>
    <div>
    <label for="image" class="form-label">Image link</label>
     <input type="text" name="listing[image]" placeholder="enter image URL/Link" class="form-control" required>
    </div>
     <br>
     <div>
     <label for="price" class="form-label">Price</label>
      <input type="number" name="listing[price]" placeholder="enter price" required>
      </div>
      <br>
      <div>
      <label for="location" class="form-label">Location</label>
      <input type="text" name="listing[location]" placeholder="enter location" required>
      </div>
      <br>
      <div>
      <label for="country" class="form-label">Country</label>
      <input type="text" name="listing[country]" placeholder="enter country" required>
   </div>
      <br>
   <button class="btn btn-dark">Add</button>
    </form> 
</div>
    </div>