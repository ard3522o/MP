   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
   <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card" style="width: 20rem;">
  <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
<div class="card-img-overlay">
    <h5 class="card-title">Card title</h5>
    
    <p class="card-text"><small>Last updated 3 mins ago</small></p>
  </div>
  <div class="card-body">
    <p class="card-text"><%= listing.title %>
    <br>
  &#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
  </div>
</div>
    </a>
   
   <% } %>
   </div>
